{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "ocpArch",
    "ocpVersion"
  ],
  "properties": {
    "nodePoolReplicas": {
      "type": "integer",
      "maximum": 4,
      "minimum": 2
    },
    "ocpArch": {
      "type": "string",
      "enum": ["amd64", "arm64"]
    },
    "ocpVersion": {
      "type": "string"
    }
  }
}
